begin
    int pow(int x, int n) is
        if n == 0 then
            return 1
        else
            if n == 1 then 
                return x
            else
                int half = call pow(x, n / 2);
                if n % 2 == 0 then
                    return half * half
                else
                    return half * half * x
                fi
            fi
        fi
    end

    int x = 2;
    int n = 11;
    int result = call pow(x, n);
    println result
end